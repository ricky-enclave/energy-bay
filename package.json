{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "gulp": "^5.0.1",
    "gulp-data": "^1.3.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-nunjucks-render": "^2.2.3"
  },
  "scripts": {
    "tailwind": "npx @tailwindcss/cli -i ./src/input.css -o ./assets/css/style.css --watch",
    "gulp": "gulp",                         
    "build:html": "gulp build",             
    "build": "npm run build:html && npm run tailwind",

    "watch": "concurrently \"npm run tailwind\" \"npm run gulp\"",
    "dev": "npm run watch"
  }
}
